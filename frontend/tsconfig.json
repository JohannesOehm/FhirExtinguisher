{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "ts-vue-plugin"
      }
    ]
  },
  "include": [
    "./src/app/**/*"
  ]
}